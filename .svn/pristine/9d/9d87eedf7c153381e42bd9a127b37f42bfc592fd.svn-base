

.banner{
	position: relative;

	width: 100%;
	height: 680px;

	min-width: 1200px;

	text-align: center;

	overflow: hidden;

	background: url(../img/index/banner-index-bg.jpg) no-repeat center 0;

	&-header{
		position: absolute;
		top: 37px;
		left: 50%;

		margin-left: -600px;

		width: 1200px;
		height: 55px;

		.logo{
            width: 130px;
            float: left;

            a{
                display: block;
                img{
                    width: 100%;
					vertical-align: middle;
                }
            }
		}

        .local{
        	position: relative;
        	top: 13px;
        	left: 15px;
        	z-index: 20;

            float: left;

			font-size: 14px;
		
			cursor: pointer;

			&-bg{
				position: absolute;
				top: 1px;
				z-index: 1;

				width: 76px;
	            height: 30px;
				line-height: 30px;

				background: #acaaaa;
				opacity: 0.32;
				filter: alpha(opacity=32);
				border-radius: 38px;

			}

            &-area{
				position: absolute;
				z-index: 2;

				padding: 0 10px;

				width: 63px;
				height: 30px;

				line-height: 30px;

				color: $cl-wt;

                .local-img{
					display: block;
					float: left;

                    width: 18px;
                    height: 20px;

					margin-top: 6px;

                    background: url(../img/pbl/new-local.png) center center no-repeat;
                }
                .local-txt{
					float: left;
                    margin-left: 3px;
		
                    font-size: 16px;
                }
            }

			&-box{
				position: absolute;
				top: 30px;
				top: 17px\9;
				*top: 17px;
			
				z-index: 10;

				display: none;

	            &-arrow{
	            	float: left;
	            	
	            	margin-left: 27px;
	            	margin-top: 6px;
	            	display: block;
	            	
	            	width: 0;
	            	height: 0;
	            	
	            	border-left: 8px solid transparent;
	                border-right: 8px solid transparent;
	                border-bottom: 8px solid #fff;
	            }

	            &-citys{
	            	padding: 10px 0 5px 15px;
	                width: 190px;

	                border: 1px solid #dfdfdf;
	                border-top: none;
	               	border-radius: 0 0 3px 3px;
	               	box-shadow: 0 2px 5px rgba(0,0,0,.2);
	                background: $cl-bg;

	                @include clearfix();

	                >.item{
	                    width: 48px;
	                    height: 23px;
	                    line-height: 23px;

	                    text-align: center;
	                    float: left;
						
						margin: 0 15px 10px 0;
	        
	                    a{
	                        display: block;
	                        width: 100%;
	                        height: 100%;
	                    }

	                    &:hover{
	                        background-color: $cl-yl;
	                        color: $cl-wt;
	                    }

	                    &.current{
	                        background-color: $cl-yl;
	                        color: $cl-wt;
	                    }
	                }

	                &.active{
	                    display: block;
	                }
	            }
			}

			&:hover{
			    .local-box{
			        display: block;
			    }

                .local-img{
                    background: url(../img/pbl/new-local-orange.png) center center no-repeat;
                }
			}
        }

		.nav{
            float: left;
			position: relative;
			top: 13px;

            width: 564px;
            height: 30px;

            margin-left: 330px;

            &-bg{
            	width: 564px;
            	height: 30px;
				line-height: 30px;

				border-radius: 282px;

	            background: #646464;
	            opacity: 0.3;
	            filter: alpha(opacity=30);
            }

			&-item{
				position: absolute;
				left: 0;
				top: 0;

				.item{
				    font-size: 20px;
				    float:left;

				    padding-left: 28px;
				    padding-right: 28px;

				    color: $cl-wt;

				    &:hover{
				        color: $cl-yl;
				    }

				    &.current{
				        color: $cl-yl;
				    }
				}
			}
            
        }

        .tel{
        	position: relative;
        	float: right;

        	padding: 0 0 0 20px;
        	margin-top: 10px;

        	width: 110px;
        	height: 32px;

        	line-height: 32px;
        	font-size: 14px;
        	color: $cl-wt;

        	background: $cl-yl;
        	border-radius: 84px;
       
			.shake{
				position: absolute;
				left: -10px;
				top: -3px;

				display: block;
				
				width: 38px;
				height: 36px;

				animation: myshake 200ms infinite;
				-webkit-animation: myshake 200ms infinite;

				background: url(../img/index/phone-animate.png) no-repeat 0 0;
			}
        	
        }
	}

	&-box{
		position: absolute;
		left: 50%;
		top: 460px;
		z-index: 2;

		display: inline-block;

		margin-left: -411px;

		width: 822px;
	    text-align: left;

		.m-bsale{
			// banner sale or aside sale
			position: relative;

			&-form{
				
				@include clearfix();

				white-space: nowrap;

				.freeorder{
					// width 240px, without using border-box
					display: block;
					float: left;

					width: 197px;
					height: 64px;

					font-size: 22px;
					line-height: 60px;
					color: $cl-yl;

					padding-left: 42px;

					border-right: 1px solid $cl-bd;
					border-radius: 10px 0 0 10px;
					background-color: $cl-bg;

					.i-arrow{
						width: 21px;
						height: 20px;

						margin-left: 14px;

						background-image: url(../img/index/banner-index-arrow.png);
						background-repeat: no-repeat;
						background-position: 0 0;

						vertical-align: -3px;
					}
				}

				.phone{
					display: block;
					float: left;

					width: 590px;
					height: 28px;

					padding: 18px 14px 18px 36px;

					font-size: 18px;
					line-height: 28px;

					vertical-align: top;
					border-radius: 8px 0 0 8px;
				}

				.salebtn{
					display: block;
					float: left;

					width: 180px;
					height: 64px;

					font-size: 26px;
					color: $cl-wt;

					background: $cl-yl;
					border-radius: 0 8px 8px 0;

					cursor: pointer;

					font-family: "Microsoft Yahei";
				}
			}

			&-alert{
				position: absolute;
				top: 74px;
				left: 50px;
				z-index: 1;

				width: 410px;

				padding: 18px 30px;

				background-color: $cl-bg;
				border-radius: 5px;
				box-shadow: 1px 1px 15px #d4d4d4;

				display: none;

				&.active{
					display: block;
				}

				&:before{
					display: block;
					content: "";

					width: 0;
					height: 0;

					border-left: 10px solid transparent;
					border-right: 10px solid transparent;
					border-bottom: 10px solid $cl-wt;

					position: absolute;
					top: -9px;
					left: 160px;
					z-index: 2;
				}

				&:after{
					display: block;
					content: "";

					width: 0;
					height: 0;

					clear: both;
				}

				.i-mark{
					display: block;
					float: left;

					width: 16px;
					height: 16px;

					margin: 2px 8px;

					background-color: $cl-yl;
					border-radius: 50%;

					color: $cl-wt;
					font-size: 12px;
					font-style: normal;
					text-align: center;
					line-height: 16px;
				}

				.ct{
					display: block;
					overflow: hidden;

					color: $cl-yl;
					font-size: 16px;
					line-height: 20px;
				}

			}
		}

	}

	&-order{
		position: absolute;
		left: 0;
		top: 606px;
		
		width: 100%;

		font-size: 16px;
		text-align: center;
		color: $cl-wt;

		em{
			padding: 0 10px;

			font-style: normal;
			font-size: 22px;
			color: #ff3000;
		}
	}
}

@keyframes myshake{
	
	0%{
		transform: rotate(0deg);
	}

	50%{
		transform: rotate(-12deg);
	}

	100%{

		transform: rotate(0deg);
	}

}
