.notice{
	margin: 0 24px;
	padding: 30px 0 44px 0;
	
	@include clearfix();

	&-small{
		margin-bottom: 20px;

		h2{
			font-size: 20px;
			color: #f69f00;
			
			margin-bottom: 20px;

			font-weight: normal;
		}

		p{
			color: #333;
			font-size: 14px;
			
			margin: 10px 0;
		}

		&-progress{

			margin-bottom: 20px;

			&-box{
				
				>p{
					margin: 10px 0;
					
					&.content{
						padding-left: 20px;
					}

				}
			}
		}
	}
}