.valuate{
    width: 100%;
    background: #fff;


    &-describ{
        padding: 53px 0 63px;
        
        visibility: hidden;
        opacity: 0;
        transform: translate3d(0, 10%, 0);
        transition: all 1s ease 0s;

        @include clearfix();

        &.active{
            opacity: 1;
            transform: translate3d(0, 0, 0);
            visibility: visible;    
        }

        >.title{
            height: 160px;
            line-height: 160px;
            font-size: 40px;
            color: $cl-main;
            text-align: center;
        }

        >.list{
            padding-top: 10px;
            
            @include clearfix();

            >.item{
                width: 266px;
                text-align: center;
                float: left;
                margin-left: 68px;

                &.item-2{
                    width: 336px;
                    margin-left: 90px;
                    margin-right: 120px;
                }
                &.item-3{
                    width: 252px;
                    margin-left: 0;
                    margin-right: 68px;
                }

                >.item-img{
                    width: 74px;
                    height: 74px;
                    margin: 0 auto;
                    background: url(../img/valuate/desc_01.png) no-repeat;

                    &.item-img2{
                        background-image: url(../img/valuate/desc_02.png);
                    }
                    &.item-img3{
                        background-image: url(../img/valuate/desc_03.png);
                    }

                    transition: all 0.2s linear 0s;

                    &:hover{
                        transform: translate3d(0px, -6px, 0px);
                    }
                }
                >.item-title{
                    height: 70px;
                    line-height: 70px;
                    color: $cl-yl;
                    font-size: 16px;
                }
                >.item-text{
                    line-height: 20px;
                    font-size: 14px;
                    color: #999;
                }
            }
        }
    }    
}
