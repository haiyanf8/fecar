.banner{
	width: 100%;
	height: 240px;
	
	&-title{

		padding-left: 70px;
		padding-top: 70px;
		
		.ct{
			font-size: 50px;
			color: #353535;
		}

		.tt{
			padding-top: 3px;

			font-size: 24px;
			color: $cl-yl;
			font-family: "Arial";
		}
	}

	&.introbg{
		background: url(../img/info/intro-banner.jpg) no-repeat center 0;
	}

	&.saleguidebg{
		background: url(../img/info/saleguide-banner.jpg) no-repeat center 0;

		.ct{
			color: #fff;
		}
	}
}
