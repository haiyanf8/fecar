.compare{
    position: relative;
	width: 100%;
	height: 156px;

	margin-top: 45px;

    background: url("../img/index/compare-price.jpg") no-repeat center 0;

    &-center{
        position: absolute;
        left: 50%;
        top: 45px;

        padding-left: 10px;

        width: 588px;
        height: 80px;

        .item{
            float: left;
            
            height: 50px;
            line-height: 50px;
            
            font-size: 63px;
            font-family: "Arial";
            font-weight: bold;
            color: $cl-wt;
        }

        .num01{
            margin-right: 100px;
        }

        .num02{
            margin-right: 115px;
            color: $cl-yl;
        }

        .num03{
            margin-right: 0;
        }
    }
}
