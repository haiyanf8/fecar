.aside{

    &-order{
        margin-bottom: 30px;
        margin-top: 15px;
        width: 245px;

        h2{
            width: 245px;

            color: #808080;
            font-size: 18px;
            font-weight: normal;
            text-align: center;
            
            em{
                padding: 0 2px;

                color: #ff6b1d;
                font-family: "Arial";
                font-size: 36px;
                font-style: normal;
            }
        }

        &-tel{
            
            .phone{
                margin: 30px 0 23px;

                width: 219px;
                height: 15px;
                line-height: 15px;

                padding: 12px;

                border: 1px solid $cl-bd;
                border-radius: 5px;
                font-size: 14px;
               
                outline: medium none;
            }

            .salebtn{
                width: 245px;
                height: 38px;
                line-height: 32px;

                background: #f8f8f8 none repeat scroll 0 0;
                border: 1px solid #6c6c6c;
                border-radius: 5px;
                color: #6c6c6c;
                cursor: pointer;
                font-family: "Microsoft Yahei";
                font-size: 18px;
                outline: 0 none !important;
                text-align: center;

                transition: background 1s ease 0s;

                &:hover{
                    border: 1px solid $cl-yl;
                    color: $cl-wt;
                    background: $cl-yl;
                }
            }
        }
    }
}
