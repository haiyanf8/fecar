

@mixin clearfix(){
    overflow: hidden;
    _zoom: 1;
}


@mixin hover-cl-anm($color : $cl-yl){
    a{
        transition: color 0.5s ease 0s;
        &:hover{
            color: $color;
        }
    }
}


@mixin full-page($zindex : 50){
	width: 100%;
	height: 100%;

	position: fixed;
	top: 0;
	left: 0;
	z-index: $zindex;

	background-repeat: repeat;
	background-image: url(../img/pbl/tspr-50.png);

	display: none;

	&.active{
		display: block;
	}
}


@mixin text-overflow(){
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}


@mixin text-overflow-multi($line : 2){
	display: -webkit-box;
	-webkit-box-orient: vertical;
	overflow : hidden;
	text-overflow: ellipsis;

	-webkit-line-clamp: $line;
}
