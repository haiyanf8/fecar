.testing{
	display: none;
	&.active{
		display: block;
	}
	.con{
		padding-top: 25px;
		border: 1px solid $cl-bd;

		.testing-con{
			width: 1100px;
			margin: 0 auto;
			padding-top: 20px;

			padding-bottom: 40px;
			padding-right: 50px;
			box-sizing: border-box;
			border-bottom: 1px dotted $cl-bd;

			&.last{
				border-bottom: none;
			}

			@include clearfix();


			.testing-img{
				width: 560px;
				text-align: center;

				float: left;

				// display: flex;
				// justify-content: center;
				// align-items: center;

				.testing-img-in{
					width: 100%;

					img{
						width: 85%;
						margin-top: 40px;
					}

				}

			}
			.testing-desc{
				float: right;
				width: 418px;
				font-size: 14px;
				align-self: flex-start;
				.accout{
					margin-bottom: 18px;
					color: $cl-main;
				}
				table{
					border-collapse:collapse;
					border-spacing:0;
					border-left:1px solid $cl-bd;
					border-top:1px solid $cl-bd;

					tr{
						td{
							height: 38px;
							line-height: 38px;
							text-align: center;
							border-right:1px solid $cl-bd;
							border-bottom:1px solid $cl-bd;
							width: 386px;
							color: #606060;

							&.num{
								span{
									display: inline-block;
									width: 16px;
									height: 16px;
									line-height: 16px;
									text-align: center;

									background-color: #00b7ee;
									color: $cl-wt;
								}
							}
							&.more{
								position: relative;
								span{
									cursor: pointer;
									position: relative;
									top: 4px;

									// *top: 0;

									display: inline-block;
									width: 15px;
									height: 16px;

									background: url(../img/auction-detail/test-bad.png) center center no-repeat;
								}
								.more-desc{
									display: none;
									background-color: $cl-bg;

									position: absolute;
									top: 20px;
									left: 70px;

									width: 50px;
									border: 1px solid $cl-bd;
								}
								&:hover{
									.more-desc{
										display: block;
									}
								}
							}
						}
					}
				}
			}
		}
	}
}
