.bread-nav{
	width: 880px;
	height: 45px;
	line-height: 45px;

	color: #333;
	font-size: 12px;

	.idx{
		color: #333;
	}
}

.infodetail{

	border-bottom: 1px solid $cl-bd;
	padding-bottom: 30px;

	@include clearfix();

	&-pic{
		float: left;

		width: 338px;
		height: 170px;

		margin-top: 15px;

		img{
			width: 100%;
			height: 100%;
		}
	}

	&-desc{

		float: right;
		width: 530px;
		
		.tt{
			height: 35px;

			font-size: 26px;
			color: $cl-main;

			@include text-overflow();
		}

		.param{

			.item{
			    float: left;

				padding: 20px 0 10px;

			    width: 132px;

			    text-align: left;
			    border-bottom: 1px solid $cl-bd;

			    .title{
		    	   	height: 20px;
		    	   	line-height: 20px;

	   		    	color: #666;
	   	    	   	font-size: 14px;
	   
		    		@include text-overflow();
			    }

			    .content{
			    	margin-bottom: 0;

			    	height: 30px;
			    	line-height: 30px;

			    	color: #999;
		    	   	font-size: 16px;

		    	   	@include text-overflow();  
		    	}

		    	.moreparam{
					height: 50px;
					line-height: 50px;

					font-size: 14px;
					color: #808080;
		    	}

		    	&.diff{
		    		border-bottom: none;
		    	}
			}
		}
	}
}
