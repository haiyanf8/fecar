

.main_container{
	@include clearfix();
}

.mapbox{
	height: 636px;
}

.main{
	margin-top: 63px;
	margin-bottom: 87px;

	&-left{
		padding: 40px 20px 20px;
		float: left;

		width: 378px;
		height: 568px;
		border: 1px solid #cacaca;
		border-radius: 6px;
		box-shadow: 0 1px 10px 2px rgba(235,235,235,.9);

		&-nav{
			
			@include clearfix();

			.item{
				float: left;
				margin-bottom: 30px;

				width: 93px;
				height: 24px;
				line-height: 24px;

				font-size: 20px;
				border-right: 1px solid $cl-bd;
				text-align: center;

				cursor: pointer;

				&:nth-child(4n){
					border-right: none;
				}

				&.current{
					color: $cl-og;
				}
			}
		}

		&-content{
			@include clearfix();

			.item{
				
				.img{
					display: block;

					margin: 5px auto 35px;

					width: 372px;
					height: 245px;

					

					img{
						border-radius: 5px;
					}
				}
				
				.txt{
					width: 373px;
					height: 55px;

					.icon{
						margin-right: 15px;
						float: left;
						width: 44px;
						height: 55px;

						background: url("../img/store/m-city-map.png") no-repeat center center;
					}

					.address{
						width: 314px;
						height: 55px;

						font-size: 20px;
						color: #717171;

						display: table-cell;
						vertical-align: middle;
						overflow: hidden;

				}
						span{
							@include text-overflow-multi(2);
						}
					}

				&.active{
					display: block;
				}
			}
		}
	}

	&-right{
		width: 750px;
		height: 628px;

		float: right;

		border: 1px solid #efefef;
		border-radius: 8px;
	}
}
	

.m-map{
	position: relative;

	&-fake{
		position: absolute;
		top: 0;
		left: 0;

		width: 100%;
		height: 100%;

		overflow: hidden;
		background: url(../img/store/m-map-fake.png) center center no-repeat;

		.point{
			position: absolute;

			width: 62px;
			height: 32px;

			background-position: center center;
			background-repeat: no-repeat;

			cursor: pointer;
		}
	}

	&-baidu{
		width: 100%;
		height: 100%;

		position: absolute;
		top: 0;
		left: 0;
		z-index: 5;
	}
}

.second{

	@include clearfix();

	&-item{
		float: left;
		width: 68px;
		height: 24px;
		line-height: 24px;
		text-align: center;

		&.current{
			color: #fff;
			font-size: 12px;
			border-radius: 3px;
			background: #ff6b1d;
		}
	}
}
