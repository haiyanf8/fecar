.faq{
	width: 100%;
	padding: 20px 0 66px 0;

	@include clearfix();
	
	&-title{

		width: 1200px;
		padding-top: 45px;
		padding-bottom: 50px;

		>img{
			width: 602px;
			margin: 0 auto;
			display: block;
		}

	}
	
	&-box{
			width: 1200px;
			margin: 25px auto auto;

			@include clearfix();

			&-right{
				float: right;
			}

		&-small{
			width: 538px;
			margin-left: 26px;

			float: left;

			_display: inline;

			&.diff{
				float: right;

				margin-left: 0;
				margin-right: 26px;
			}

			.tt{

				font-size: 24px;
				color: #353535;

				height: 40px;
				line-height: 40px;

				position: relative;

				margin-bottom: 10px;

				i{
					display: inline-block;

					width: 32px;
					height: 28px;
					background-repeat: no-repeat;

					position: absolute;
					top: 8px;
					left: 0;

					&.i-note{
						background-image: url(../img/index/faq-note.png);
					}
					&.i-gold{
						background-image: url(../img/index/faq-gold.png);
					}
					&.i-bidding{
						background-image: url(../img/index/faq-bidding.png);
					}
					&.i-deal{
						background-image: url(../img/index/faq-deal.png);
					}
				}

			}
			.ct{
				width: 458px;

				line-height: 20px;

				font-size: 14px;
				color: #a2958e;

				padding: 20px;
				margin-left: 38px;

				border: 1px solid #eeeede;

				&.ct60{
					height: 60px;
					margin-bottom: 15px;
				}
				&.ct80{
					height: 80px;
				}
			}
		}
	}

	&-more{
		text-align: right;
		padding-right: 24px;
		padding-top: 21px;

		a{
			color: $cl-yl;
			font-size: 14px;
		}
	}
}
