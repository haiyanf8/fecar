@import "m-pbl/flink";

.footer{
    width: 100%;
    background-color: #353535;


    &:after{
        content:"clear";
        height: 0;

        display: block;
        clear: both;
        overflow: hidden;
        visibility: hidden
    }

    .footcenter{
        width: 100%;
        border-bottom: 1px solid #535353;

        &:after{
            content:"clear";
            height:0;

            display:block;
            clear:both;
            overflow:hidden;
            visibility:hidden

        }
    }

    .footer-con{
        width: 1200px;
        margin: 0 auto;

        box-sizing: border-box;

        .footer-tt{
            margin-left: 0;
            font-size: 18px;
            color: $cl-wt;

            margin-bottom: 10px;
        }

        .footer-left{
            position: relative;

            padding-top: 47px;
            padding-bottom: 23px;

            text-align: center;
            float: left;

            .logoimg{
                margin-bottom: 20px;
            }


            &-wechat{
                overflow:visible;
                position: absolute;
                top: -45px;
                left: 0;
                z-index: 2;

                display: none;

                padding: 15px;

                width: 118px;
                height: 150px;

                background: #fff;
                box-shadow: 1px 1px 5px rgba(0,0,0,.5);


                .img{
                    width: 116px;
                    height: 116px;

                    margin: 0 auto;
                    margin-bottom: 5px;

                    img{
                        display: block;
                        margin: 0 auto;

                        width: 100%;
                        height: 100%;
                    }
                }

                .info{
                    p{
                        color: #353535;
                        font-size: 14px;

                        text-align: center;
                    }
                }

                .arrow{
                    position: absolute;
                    bottom: -6px;
                    left: 69px;
                    z-index: 1;

                    border-color: #fff transparent transparent;
                    border-style: solid;
                    border-width: 6px 5px 0;

                    width: 0;
                    height: 0;
                }
            }

            >.txt{
                color: $cl-wt;
                font-size: 18px;
                text-align: left;

                i{
                    margin-right: 8px;

                    width: 33px;
                    height: 33px;

                    vertical-align: middle;

                    &.tel{
                        background: url(../img/pbl/footer-tel.png) no-repeat center -2px;
                    }

                    &.wx{
                        background: url(../img/pbl/footer-wx.png) no-repeat right -2px;
                    }
                }

                &.wxfont{
                    padding-top: 5px;

                    font-size: 18px;

                    cursor: pointer;

                    &:hover{

                        .ewm{
                            display: block;
                        }

                        .wx{
                            background: url(../img/pbl/footer-wx-hover.png) no-repeat right -2px;
                        }
                    }
                }

            }
        }
        .footer-right{
            padding-top: 26px;
            padding-bottom: 12px;
            float: right;

            .footer-dl {
                position: relative;

                float: left;
                width: 76px;

                padding: 0 54px;

                text-align: center;

                &:before{
                    position: absolute;
                    left: 0;
                    top: 0;

                    content: "";

                    width: 2px;
                    height: 90px;

                    background: #b8b7b7;
                }
            }

            >.download{

                .download-dd{
                    width: 100px;
                    height: 29px;
                    margin-top:10px;

                    a{
                        display: block;
                        width: 100px;
                        height: 29px;

                        &.d1{

                            background: url(../img/pbl/download-ios.png);
                        }
                        &.d2{
                            width: 100px;
                            height: 29px;
                            display: block;
                            background: url(../img/pbl/download-android.png);
                        }
                    }
                }
            }

            .footer-txt{
                text-align: center;

                .item-txt{
                    margin-left: 0;
                    color: $cl-wt;
                    font-size: 12px;

                    line-height: 26px;

					a{
                        color: $cl-wt;
						&:hover{
							color: $cl-yl;
						}
					}
                }
            }

            .footer-addresss{
                width: 290px;

				padding-right: 24px;

                text-align: left;

                .area{
                    display: inline-block;

                    width: 12px;
                    height: 16px;

                    margin-right: 5px;
                    vertical-align: middle;

                    background: url(../img/pbl/footer-area.png) no-repeat right 0;
                }
            }
        }
    }

    .footer-link{
        clear: both;
        width: 1120px;

        margin: 0 auto;
        padding: 25px 40px;

        overflow: hidden;

        span{
            display: block;

            &.tt{
                float: left;
                margin-right: 12px;

                width: 78px;
                height: 20px;
                line-height: 18px;

                font-size: 18px;
                color: #fff;
            }

            &.ct{
                float: right;
                width: 1030px;
            }
        }

        a{
            color: $cl-wt;

            display: inline-block;
            padding: 2px 15px 2px 0;

            &:hover{
                color: $cl-yl;
            }
        }

    }
}

.footer-record{
    clear: both;

    width: 100%;
    height: 56px;

    line-height: 56px;
    text-align: center;
    font-size: 12px;

    background: #3f3f3f;
    color: #b8b7b7;
}
