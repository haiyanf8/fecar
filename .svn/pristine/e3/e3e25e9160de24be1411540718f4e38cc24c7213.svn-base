<div class="configure">
    
    <div class="configure-nav">
        <ul class="js-switch-chosen">
            <li class="item--chosen item current">基本配置</li>
            <li class="item--chosen item">主要配置</li>
         </ul>
    </div>

    <div class="configure-content js-switch-target">
        <div class="config item--target active">
       
            <ul class="config-list">
                <li>
                    <span class="tt">车辆类型</span>
                    <span class="ct">{$carDetailInfo[0][0]['model_type']}</span>
                </li>
                <li>
                    <span class="tt">供油方式</span>
                    <span class="ct">{$carDetailInfo[0][0]['fuel_supply_method']}</span>
                </li>
                <li>
                    <span class="tt">燃油方式</span>
                    <span class="ct">{$carDetailInfo[0][0]['fuel_type']}</span>
                </li>
                <li>
                    <span class="tt">车身型式</span>
                    <span class="ct">{$carDetailInfo[0][0]['body_style']}</span>
                </li>

                <li>
                    <span class="tt">驱动形式</span>
                    <span class="ct">{$carDetailInfo[0][0]['drive_style']}</span>
                </li>
                <li>
                    <span class="tt">车门数</span>
                    <span class="ct">{$carDetailInfo[0][0]['door_num']}</span>
                </li>
                <li>
                    <span class="tt">前轮胎规格</span>
                    <span class="ct">{$carDetailInfo[0][0]['before_tire_style']}</span>
                </li>
                <li>
                    <span class="tt">后轮胎规格</span>
                    <span class="ct">{$carDetailInfo[0][0]['after_tire_style']}</span>
                </li>
                <li>
                    <span class="tt">座位数</span>
                    <span class="ct">{$carDetailInfo[0][0]['seat_num']}</span>
                </li>
                <li>
                    <span class="tt">轮毂材料</span>
                    <span class="ct">{$carDetailInfo[0][0]['wheel_hub_material']}</span>
                </li>
                <li>
                    <span class="tt">最大功率</span>
                    <span class="ct">{$carDetailInfo[0][0]['max_power']}</span>
                </li>
                <li>
                    <span class="tt">最大马力</span>
                    <span class="ct">{$carDetailInfo[0][0]['max_housepower']}</span>
                </li>
                <li>
                    <span class="tt">气囊数</span>
                    <span class="ct">{$carDetailInfo[0][0]['gas_bag_num']}</span>
                </li>
                <li>
                    <span class="tt">扬声器数</span>
                    <span class="ct">{$carDetailInfo[0][0]['speaker_num']}</span>
                </li>
            </ul>
        </div>

        <div class="config item--target">
           
            <ul class="config-list">
                <li>
                    <span class="tt">遥控钥匙</span>
                    <span class="ct">
