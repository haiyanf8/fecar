.m-section-tt {
  font-size: 34px;
  font-family: SimHei;
  font-weight: bold;
  color: #444;
  line-height: 1;
  text-align: center;
}
.m-section-tt span {
  display: inline-block;
  vertical-align: top;
  position: relative;
}
.m-section-tt span:before {
  content: "";
  display: block;
  width: 160px;
  height: 100%;
  background: url(../img/pbl/section-tt-left.png) center center no-repeat;
  position: absolute;
  top: 0;
  left: -188px;
}
.m-section-tt span:after {
  content: "";
  display: block;
  width: 160px;
  height: 100%;
  background: url(../img/pbl/section-tt-right.png) center center no-repeat;
  position: absolute;
  top: 0;
  right: -188px;
}

