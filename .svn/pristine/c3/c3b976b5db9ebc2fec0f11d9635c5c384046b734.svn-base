.banner {
  position: relative;
  width: 100%;
  height: 330px;
  overflow: hidden;
  border-bottom: 1px solid #e5e5e5;
  text-align: center;
  background: url(../img/sale/sale-banner-bg.jpg) no-repeat center 0;
}
.banner .buy {
  position: absolute;
  top: 0;
  left: 50%;
  margin-left: -600px;
}
.banner .buy a {
  position: absolute;
  margin: 216px 0 0 151px;
  display: block;
  width: 120px;
  height: 38px;
  line-height: 38px;
  text-align: center;
  font-size: 18px;
  color: #fff;
  border-radius: 5px;
  background: #ff6b1d;
  -webkit-transition: all 0.5s ease 0s;
          transition: all 0.5s ease 0s;
}
.banner .buy a:hover {
  background: #f65e0e;
}

