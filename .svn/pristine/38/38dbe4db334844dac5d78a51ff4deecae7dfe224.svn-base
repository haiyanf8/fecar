.flow{
	
	padding: 30px 0 0 0;
	@include clearfix();

	h2{
		padding-left: 320px;

		height: 70px;
		line-height: 70px;

		font-weight: bold;
		font-size: 22px;
		color: $cl-yl;
	}

	&-1{
		width: 934px;
		height: 251px;

		background: url("../img/info/sale-progress01.jpg") no-repeat center 0;
	}

	&-2{
		width: 934px;
		height: 259px;

		background: url("../img/info/sale-progress02.jpg") no-repeat center 0;
	}

	&-3{
		width: 934px;
		height: 252px;

		background: url("../img/info/sale-progress03.jpg") no-repeat center 0;
	}


	&-4{
		width: 934px;
		height: 39px;

		padding-top: 104px;

		background: url("../img/info/sale-progress04.jpg") no-repeat center 0;
	}

	&-txt{
	
		color: #4c4c4c;
		font-size: 14px;
		
		span{

			&.left{
				float: left;

				padding-left: 65px;
				padding-top: 110px;

				width: 340px;
			}
			
			&.right{
				float: right;

				padding-right: 65px;
				padding-top: 110px;

				width: 340px;
			}

			&.center{
				display: block;
				padding-left: 245px;

				width: 340px;
			}
		}
	}

}
